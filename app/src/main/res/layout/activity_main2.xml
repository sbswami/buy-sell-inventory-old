<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    tools:context="com.sanshy.buysellinventory.Main2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                app:srcCompat="@drawable/logo"
                android:contentDescription="@string/img_description_logo"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/profile1">
            </com.google.android.gms.ads.AdView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="Profile"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#71A6BE"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bluebox"
                android:cursorVisible="true"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:hint="@string/name_text"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bluebox"
                android:cursorVisible="true"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:hint="@string/phone_text"
                android:inputType="phone"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="24sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bluebox"
                android:cursorVisible="true"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="24sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blueb"
                android:fontFamily="@font/acme"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="save"
                android:text="@string/save_text"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonorange"
                android:fontFamily="@font/acme"
                android:onClick="cancel"
                android:text="@string/cancel_text"
                android:textColor="#fff"
                android:textSize="40sp" />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/profile2">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
