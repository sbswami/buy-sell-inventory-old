<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    tools:context="com.sanshy.buysellinventory.payByCustomer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:visibility="gone"
                app:srcCompat="@drawable/logo"
                android:contentDescription="@string/img_description_logo"/>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/payByCustomer1">
            </com.google.android.gms.ads.AdView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="@string/pay_by_customer_text"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="32sp" />

            <AutoCompleteTextView
                android:id="@+id/suggestion_box3"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bluebox"
                android:completionThreshold="1"
                android:fontFamily="@font/acme"
                android:hint="@string/customer_name_text"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/color_cursor"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:shadowColor="#000"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bluebox"
                android:cursorVisible="true"
                android:ems="10"
                android:fontFamily="@font/acme"
                android:hint="@string/amount_to_pay_text"
                android:inputType="number|numberDecimal"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/remainHold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="@string/remaining_amount_text"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save3"
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/blueb"
                    android:fontFamily="@font/acme"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="historyPay"
                    android:text="@string/history_of_pay_text"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/save2"
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/blueb"
                    android:fontFamily="@font/acme"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="historyBuy"
                    android:text="@string/history_of_sell_text"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blueb"
                android:fontFamily="@font/acme"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="pay"
                android:text="@string/pay_text"
                android:textColor="#fff"
                android:textSize="40sp" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonorange"
                android:fontFamily="@font/acme"
                android:onClick="cancel"
                android:text="@string/cancel_text"
                android:textColor="#fff"
                android:textSize="40sp" />

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/payByCustomer2">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
